@model eFashionShop.ViewModels.WebAppViewModel.HomeViewModel

<div id="banner-carousel" class="pt-75 owl-carousel owl-theme">
    @foreach (var image in Model.FeaturedImages)
    {
        <div class="item">
            <img src='@image.ImagePath' alt='@image.Caption'>
        </div>
    }
</div>

<div class="site-wrapper" style="padding-top: 20px !important">
    <div class="container px-5 text-center">
        <div class="general-title wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="200ms">
            <h2>Về chúng tôi</h2>
            <div class="title-devider"></div>
        </div>
        <div class="row wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="400ms">
            <div class="col-md-10 col-md-offset-1">
                <p>
                <p style="text-align:center">
                    <h4 style="font-family:Arial,Helvetica,sans-serif">
                        Công ty HTcom chuyên về lĩnh vực thiết kế nhà ở, thiết kế nội thất thông minh. Với hơn 5 năm kinh nghiệm làm việc trong nghề, HTcom mang đến cho khách hàng giải pháp thiết kế không gian đẹp, tối ưu về chi phí. Đội ngũ chuyên viên thiết kế của HTcom được đào tạo chuyên nghiệp, đáp ứng nhu cầu của khách hàng về thiết kế nhà, nội thất đáp ứng các tiêu chí về công năng và thẩm mỹ đẹp. 
                    </h4>
                </p>

                <p style="text-align:center">&nbsp;</p>
            </div>
        </div>
    </div>
    <!-- Projects -->
    <div class="container-fluid projects" >
        <div class="row wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="200ms">
            @foreach (var item in Model.FeaturedProducts)
            {
                <div class="col-sm-6 col-md-3">
                    <div class="project-inner">
                        <a href="/category/Deital/@item.Id">
                            <div style="width:100%;height: 300px;background: url('@item.ImagePath');background-size: cover;background-position: center center;background-repeat: no-repeat;background-color: #fff;"
                             alt='@item.Description'></div>
                            <div class="project-caption">

                                <div class="project-details">
                                    <p><i class="fa fa-plus fa-lg"></i></p>
                                    <h3>@item.Description</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="all-projects text-center wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="200ms">
        <a href="/category" class="btn orange-btn">
            Xem tất cả dự án
        </a>
    </div>
    <!-- End Projects -->
    <!-- Our Services -->
    <div class="container padding-top text-center">
        <div class="general-title wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="200ms">
